<div class="container">
<h2 class="text-sm-center">Sign up</h2>
<br/>

<div class="row">
<div class="col-sm-4 offset-sm-4">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter your Email" %>
  </div>

  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Enter your name"%>
  </div>

  <div class="form-group">
    
    <%= f.select :gender, ['male', 'female'] ,{prompt: "Select Gender"},{ class: "form-control"}%>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter password (at least 6 chars)" %>
  </div>

  <div class="form-group">
    
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "renter password" %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>